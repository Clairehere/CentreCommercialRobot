<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_robot"
        android:layout_width="168dp"
        android:layout_height="263dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_help"
        app:srcCompat="@drawable/icons8_robot_3_80" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="229dp"
        android:layout_height="61dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Bienvenue au Centre Commercial \n de Toulouse"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="Besoin d'aide .Je suis la pour vous"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/tv_demand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Votre demande concerne"
        app:layout_constraintTop_toBottomOf="@+id/tv_help"
        tools:layout_editor_absoluteX="191dp" />

    <LinearLayout
        android:layout_width="174dp"
        android:layout_height="307dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_demand"
        tools:layout_editor_absoluteX="182dp">

        <Button
            android:id="@+id/btn_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Les commerces"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/btn_caddy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Les points de retraits des caddies"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="365dp" />

        <Button
            android:id="@+id/btn_dollars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Les points de retraits"
            tools:layout_editor_absoluteX="179dp"
            tools:layout_editor_absoluteY="298dp" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accueil du magasin"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="432dp" />

        <Button
            android:id="@+id/btn_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Les horaires d'ouvertures"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="315dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>